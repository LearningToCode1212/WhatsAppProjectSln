<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhatsAppProject.Views.LoginPage"
             Title="LoginPage">
    
    <StackLayout Spacing="10" Padding="50" HorizontalOptions="Center" WidthRequest="450" VerticalOptions="Center">
        <Label 
            Text="Welcome to Btec WhatsApp!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontAttributes="Bold" TextColor="#075e54" FontSize="23" Margin="0, 0, 0, 15"/>

        <Frame BorderColor="#075e54" HeightRequest="250" CornerRadius="30">
            <StackLayout>
                <Entry x:Name="LoginBtn" Placeholder="Name: " Margin="0, 10, 0, 10"/>
                <Entry Placeholder="Phone Number: " Margin="0, 10, 0, 10"/>
                <Button Text="Login" BackgroundColor="#075e54" Margin="0, 10, 0, 0" Clicked="Button_Clicked"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>